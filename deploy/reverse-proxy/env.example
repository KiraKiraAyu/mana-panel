# -------------------------------------------------------------------
# Reverse proxy stack environment variables
# Copy this file to ".env" in the same directory before running:
# docker compose up -d
# -------------------------------------------------------------------

# Public ports exposed by the reverse proxy container
HTTP_PORT=80
HTTPS_PORT=443

# Reverse proxy routing
SITE_ADDRESS=0.0.0.0:80
BACKEND_UPSTREAM=mana-panel-backend:3000
FRONTEND_UPSTREAM=mana-panel-frontend:80

# Optional runtime tuning for Caddy (Go runtime)
CADDY_GOMEMLIMIT=256MiB
CADDY_GOMAXPROCS=0

# Service images (optional overrides)
MANA_PANEL_BACKEND_IMAGE=mana-panel-backend:latest
MANA_PANEL_FRONTEND_IMAGE=mana-panel-frontend:latest

# Backend runtime configuration
DATABASE_URL=sqlite:/app/data/mana-panel.db?mode=rwc
JWT_SECRET=change-me-in-production
JWT_EXPIRY_HOURS=24
